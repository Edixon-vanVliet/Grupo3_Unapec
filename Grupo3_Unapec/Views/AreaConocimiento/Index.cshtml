@model List<Grupo3_Unapec.Presentation.Models.AreaConocimiento>

<h2>Áreas de Conocimiento</h2>

<a asp-action="Crear" class="btn btn-primary">Crear Área de Conocimiento</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>ID Departamento</th>
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var area in Model)
        {
                <tr>
                    <td>@area.ID_Area</td>
                    <td>@area.ID_Departamento</td>
                    <td>@area.Nombre_Area</td>
                    <td>
                        <a asp-action="Detalles" asp-route-id="@area.ID_Area" class="btn btn-info btn-sm">Detalles</a>
                        <a asp-action="Actualizar" asp-route-id="@area.ID_Area" class="btn btn-warning btn-sm">Actualizar</a>
                        <a asp-action="Eliminar" asp-route-id="@area.ID_Area" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
        }
    </tbody>
</table>

