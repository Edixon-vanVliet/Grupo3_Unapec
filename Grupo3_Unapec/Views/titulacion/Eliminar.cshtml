@model Titulacion

<h1>Eliminar Titulación</h1>

<p>¿Estás seguro de que deseas eliminar la titulación "<strong>@Model.Nombre</strong>"?</p>

<form asp-action="EliminarConfirmado" asp-route-id="@Model.ID_Titulacion" method="post">
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>