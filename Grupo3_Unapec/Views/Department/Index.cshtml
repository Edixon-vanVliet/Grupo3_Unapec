@model List<Grupo3_Unapec.Domain.Entities.Department>

<h2>Departments</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Department Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => department.Name)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@department.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@department.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@department.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
